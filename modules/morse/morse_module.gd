extends "res://modules/cipher/cipher_module.gd"

const MORSE_CODE = {
	"a": ".-", "b": "-...", "c": "-.-.", "d": "-..", "e": ".", "f": "..-.",
	"g": "--.", "h": "....", "i": "..", "j": ".---", "k": "-.-", "l": ".-..",
	"m": "--", "n": "-.", "o": "---", "p": ".--.", "q": "--.-", "r": ".-.",
	"s": "...", "t": "-", "u": "..-", "v": "...-", "w": ".--", "x": "-..-",
	"y": "-.--", "z": "--..", "1": ".----", "2": "..---", "3": "...--",
	"4": "....-", "5": ".....", "6": "-....", "7": "--...", "8": "---..",
	"9": "----.", "0": "-----", ".": ".-.-.-", ",": "--..--", "?": "..--..",
	"'": ".----.", "!": "-.-.--", "/": "-..-.", "(": "-.--.", ")": "-.--.-",
	"&": ".-...", ":": "---...", ";": "-.-.-.", "=": "-...-", "+": ".-.-.",
	"-": "-....-", "_": "..--.-", "\"": ".-..-.", "$": "...-..-", "@": ".--.-.",
	" ": "/"
}

func _do_encode(text_in) -> String:
	var final_string = ""
	for c in text_in.to_lower():
		if MORSE_CODE.has(c):
			final_string += MORSE_CODE[c] + " "
		else: final_string += c
	return final_string.strip_edges()
